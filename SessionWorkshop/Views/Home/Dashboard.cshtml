@{
    ViewData["Title"] = "Dashboard";
    string? User = Context.Session.GetString("User");
    int? Number = Context.Session.GetInt32("Number");
}

<div class="text-center">
    <p class="fs-1">@Number</p>
    <div class="mx-auto w-25">
        <div class="row mb-4">
            <div class="col">
                <form asp-action="Math" asp-controller="Home" method="post">
                    <input type="hidden" name="math" value="add">
                    <button class="btn btn-warning w-100 shadow">+1</button>
                </form>
            </div>
            <div class="col">
                <form asp-action="Math" asp-controller="Home" method="post">
                    <input type="hidden" name="math" value="subtract">
                    <button class="btn btn-primary w-100 shadow">-1</button>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <form asp-action="Math" asp-controller="Home" method="post">
                    <input type="hidden" name="math" value="multiply">
                    <button class="btn btn-danger w-100 shadow">x2</button>
                </form>
            </div>
            <div class="col">
                <form asp-action="Math" asp-controller="Home" method="post">
                    <input type="hidden" name="math" value="random">
                    <button class="btn btn-success w-100 shadow">+ Random</button>
                </form>
            </div>
        </div>
    </div>
</div>



