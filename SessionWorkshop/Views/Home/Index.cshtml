@{
    ViewData["Title"] = "Home Page";
}

@model User

<div class="text-center">
    <h1 class="display-4">Welcome!</h1>
    <h3>Please give your name:</h3>
    <form asp-action="Login" asp-controller="Home" method="post">
        <input asp-for="Name" class="form-control w-25 mx-auto mt-3">
        <div class="mt-3"><span class="text-danger" asp-validation-for="Name"></span></div>
        <div class="mt-3"><button class="btn btn-primary shadow">Submit</button></div>
    </form>
</div>
